<div class="mb-4">
  <%= link_to "Назад до каталогу", products_path, class: "btn btn-secondary" %>
</div>
<h1 class="mb-4">Управління товарами</h1>

<%= link_to 'Додати новий товар', new_admin_product_path, class: 'btn btn-success mb-3' %>

<table class="table table-bordered table-striped text-center">
  <thead class="table-primary">
  <tr>
    <th>Назва</th>
    <th>Категорія</th>
    <th>Ціна</th>
    <th>Кількість</th>
    <th>Дії</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.category %></td>
      <td><%= number_to_currency(product.price, unit: "грн", format: "%n %u") %></td>
      <td><%= product.stock %></td>
      <td>
        <%= link_to 'Редагувати', edit_admin_product_path(product), class: 'btn btn-primary btn-sm me-2' %>
        <%= link_to 'Видалити', admin_product_path(product), method: :delete, data: { confirm: 'Ви впевнені?' }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
  <%= paginate @products%>
</div>
