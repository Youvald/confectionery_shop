<div class="mt-3">
  <%= link_to 'Назад до списку товарів', admin_products_path, class: 'btn btn-secondary px-4' %>
</div>
<h1 class="text-center my-5">Редагувати товар</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="text-center mb-0">Форма редагування</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @product, url: admin_product_path(@product), method: :patch, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :name, 'Назва товару', class: "form-label fw-bold" %>
              <%= form.text_field :name, class: "form-control", required: true, placeholder: "Введіть назву товару" %>
            </div>
            <div class="mb-3">
              <%= form.label :image, 'Оновити фотографію', class: "form-label fw-bold" %>
              <%= form.file_field :image, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= form.label :description, 'Опис', class: "form-label fw-bold" %>
              <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Введіть опис товару" %>
            </div>
            <div class="mb-3">
              <%= form.label :price, 'Ціна', class: "form-label fw-bold" %>
              <%= form.number_field :price, step: 0.01, class: "form-control", required: true, placeholder: "Введіть ціну товару" %>
            </div>
            <div class="mb-3">
              <%= form.label :weight, 'Вага (в кг)', class: "form-label fw-bold" %>
              <%= form.number_field :weight, step: 0.01, class: "form-control", required: true, placeholder: "Вкажіть вагу товару" %>
            </div>
            <div class="mb-3">
              <%= form.label :stock, 'Кількість на складі', class: "form-label fw-bold" %>
              <%= form.number_field :stock, class: "form-control", required: true, placeholder: "Вкажіть кількість на складі" %>
            </div>
            <div class="mb-3">
              <%= form.label :category, 'Категорія', class: "form-label fw-bold" %>
              <%= form.text_field :category, class: "form-control", placeholder: "Введіть категорію товару" %>
            </div>
            <div class="d-flex justify-content-between">
              <%= form.submit 'Оновити товар', class: "btn btn-primary px-4" %>
              <%= link_to "Назад до каталогу", products_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
