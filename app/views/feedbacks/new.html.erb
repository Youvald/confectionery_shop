<div class="my-4">
  <%= link_to "Назад до каталогу", products_path, class: "btn btn-secondary" %>
</div>

<h1 class="text-center my-5">Зворотній зв'язок</h1>

<% if @feedback.errors.any? %>
  <div class="alert alert-danger mt-3">
    <h5 class="fw-bold">Не вдалося відправити повідомлення:</h5>
    <ul class="mb-0">
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="text-center mb-0">Зворотній зв'язок</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @feedback, local: true do |f| %>
            <div class="form-group mb-4">
              <%= f.label :content, "Ваше повідомлення", class: "form-label fw-bold" %>
              <%= f.text_area :content, rows: 5, required: true, class: "form-control", placeholder: "Введіть текст повідомлення..." %>
            </div>
            <div class="d-flex justify-content-between">
              <%= f.submit "Надіслати", class: "btn btn-primary px-4" %>
              <%= link_to 'Ваші повідомлення', feedbacks_path, class: 'btn btn-secondary px-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
