<div class="mt-3">
  <%= link_to "Назад до каталогу", products_path, class: "btn btn-secondary" %>
</div>
<h1>Ваші повідомлення</h1>

<% if @feedbacks.any? %>
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Повідомлення</th>
      <th>Дата створення</th>
    </tr>
    </thead>
    <tbody>
    <% @feedbacks.each_with_index do |feedback, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= feedback.content %></td>
        <td><%= feedback.created_at.strftime('%d.%m.%Y %H:%M') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>Ви ще не залишали повідомлень.</p>
<% end %>

<%= link_to 'Написати нове повідомлення', new_feedback_path, class: "btn btn-primary" %>
